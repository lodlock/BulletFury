{
    scrMainMenu();
}

if(oInputManager.upMenuKey)
{
    if(mainMenuPos &lt;= 0)
    {
        mainMenuPos = array_length_1d(mainMenu) - 1;
    }
    else
    {
        mainMenuPos--;
    }
    show_debug_message(mainMenuPos);
}

if(oInputManager.downMenuKey)
{
    if(mainMenuPos &gt;= array_length_1d(mainMenu) - 1)
    {
        mainMenuPos = 0;
    }
    else
    {
        mainMenuPos++;
    }
    show_debug_message(mainMenuPos);
}
